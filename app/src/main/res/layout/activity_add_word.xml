<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="top|center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom= "16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.generic.dictionaryapp.AddWordActivity">
    
    <EditText
        android:id="@+id/enterNewWord"
        android:text=""
        android:hint="Enter new word here:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/enterNewDefinition"
        android:text=""
        android:hint="Enter new definition here:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/addButton"
        android:text="Add Entry"
        android:onClick="addNewEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
